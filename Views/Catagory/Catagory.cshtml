@model IEnumerable<NIMAPTest.Models.CatagoryMaster> 
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
    int sr = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Catagory</title>
</head>
<body>
    <p>
        @Html.ActionLink("Add New", "AddCatagory")
    </p>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Catagory</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sr. No</th>
                        <th>Catagory Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model)
                    {
                        <tr>
                            <td>@sr</td>
                            <td>@cat.CatName</td>
                            <td>@cat.CatDesc</td>
                            <td>
                                @Html.ActionLink("Edit", "AddCatagory", new { id = Convert.ToInt32(cat.id) }) |
                                @Html.ActionLink("Delete", "DeleteCatagory", new { id = Convert.ToInt32(cat.id) })
                            </td>
                        </tr>
                        sr++;
                    }
                </tbody>
            </table>

        </div>
    </div>
    
</body>
</html>
