
@model NIMAPTest.Models.CatagoryViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Catagory</title>
</head>
<body>
    @Html.ActionLink("Goto List", "Catagory")
    <div>
        @using (Html.BeginForm("AddCatagory", "Catagory", FormMethod.Post))
        {

        <div class="form-group">
            <label class="control-label">Catagory Name</label>
            @Html.TextBoxFor(m => m.CatName, new { @id = "txtCatname", @class = "form-control form-group", @placeholder = "Catagory Name" })

        </div>
        <div class="form-group">
            <label class="control-label">Description</label>
            @Html.TextAreaFor(m => m.CatDesc, new { @id = "txtCatDesc", @class = "form-control form-group", @placeholder = "Description" })

        </div>
            <div class="row">
                <div class="col-xs-4">
                    <input type="submit" value="Save" id="btnSave" class="btn btn-primary btn-block btn-flat" />

                </div><!-- /.col -->
            </div>

        }
    </div>
</body>
</html>
